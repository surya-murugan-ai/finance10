# Local Development Environment Variables
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/qrt_closure

# AI API Keys (Required for AI features)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# JWT Configuration (for local auth)
JWT_SECRET=your-super-secret-jwt-key-for-local-development-only
SESSION_SECRET=your-session-secret-for-local-development

# Local Auth Mode (bypasses Replit OAuth)
LOCAL_AUTH_MODE=true

# Optional: Disable Replit-specific features
REPLIT_DOMAINS=localhost:5000
REPL_ID=local-development